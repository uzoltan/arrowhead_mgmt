<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.arrowhead.managementtool">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/arrowhead_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.ArrowheadSystems"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.ArrowheadSystem_Detail"
            android:label="@string/title_activity_arrowhead_systems__detail"
            android:parentActivityName=".activities.ArrowheadSystems"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.arrowhead.managementtool.activities.ArrowheadSystems" />
        </activity>

        <activity
            android:name=".activities.ArrowheadServices"
            android:label="@string/title_activity_arrowhead_services"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.ArrowheadService_Detail"
            android:label="@string/title_activity_arrowhead_service__detail"
            android:parentActivityName=".activities.ArrowheadServices"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.arrowhead.managementtool.activities.ArrowheadServices" />

        </activity>

        <activity
            android:name=".activities.ArrowheadClouds"
            android:label="@string/title_activity_arrowhead_clouds"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.ArrowheadCloud_Detail"
            android:label="@string/title_activity_arrowhead_cloud__detail"
            android:parentActivityName=".activities.ArrowheadClouds"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.arrowhead.managementtool.activities.ArrowheadClouds" />
        </activity>

        <activity
            android:name=".activities.CoreSystems"
            android:label="@string/title_activity_core_systems"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activities.CoreSystem_Detail"
            android:label="@string/title_activity_core_system__detail"
            android:parentActivityName=".activities.CoreSystems"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.arrowhead.managementtool.activities.CoreSystems" />
        </activity>
    </application>

</manifest>