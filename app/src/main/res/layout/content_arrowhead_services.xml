<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_arrowhead_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/recycleview_vertical_margin"
    android:paddingLeft="@dimen/recycleview_horizontal_margin"
    android:paddingRight="@dimen/recycleview_horizontal_margin"
    android:paddingTop="@dimen/recycleview_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="eu.arrowhead.managementtool.Activities.ArrowheadServices"
    tools:showIn="@layout/app_bar_arrowhead_services">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_service_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <eu.arrowhead.managementtool.CustomViews.RecyclerViewEmptySupport
            android:id="@+id/service_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/empty_recview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/no_data_available"
                android:textSize="25sp"/>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
